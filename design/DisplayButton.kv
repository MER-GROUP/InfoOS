#:kivy 2.0.0

# импорт hex цветов
#:import hex kivy.utils.get_color_from_hex

# Шрифт (цифры) дисплея калькулятора
<DisplayButton@Button>:
    # размер шрифта
    font_size: '90sp' if app.is_android else '40sp'

    # цвет шрифта
    color: 'white'

    # межстрочный интервал
    line_height: 0.8

    # жирность шрифта
    # bold: True
    bold: True if app.is_android else False

    # автоматически переносить/растягивать текст {
    text_size: self.size
    halign: 'center'
    valign: 'top'
    # автоматически переносить/растягивать текст }

    #размер виджета
    size_hint_y: None
    height: '48dp'