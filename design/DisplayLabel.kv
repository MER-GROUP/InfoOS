#:kivy 2.0.0

# импорт hex цветов
#:import hex kivy.utils.get_color_from_hex

# Шрифт (цифры) дисплея калькулятора
<DisplayLabel@Label>:
    # размер шрифта
    # font_size: '90sp' if app.is_android else '40sp'
    font_size: '40sp' if app.is_android else '20sp'

    # цвет шрифта
    color: 'black'

    # межстрочный интервал
    line_height: 0.8

    # жирность шрифта
    # bold: True
    bold: True if app.is_android else False

    # автоматически переносить/растягивать текст {
    text_size: self.size
    halign: 'left'
    valign: 'top'
    # автоматически переносить/растягивать текст }

    # пролистывание текста {
    size_hint_y: None
    height: self.texture_size[1]
    text_size: self.width, None
    padding: 5, 0
    # пролистывание текста }