# Работа с директориями и файлами ОС
# from merlib.fs.File import File
#:import file merlib.fs.File.File

# Дизайн программы
<Info>:
    # ---------------------------------------------------------------------------
    fullscreen: True
    name: 'DropDown'
    # trick to not lost the Dropdown instance
    # Dropdown itself is not really made to be used in kv.
    __safe_id: [dropdown.__self__]
    # ---------------------------------------------------------------------------
    Button:
        id: btn
        text: 'Выберите ОС'
        on_release: dropdown.open(self)
        size_hint_y: None
        height: '48dp'
    # ---------------------------------------------------------------------------
    Widget:
        on_parent: dropdown.dismiss()
    # ---------------------------------------------------------------------------
    DropDown:
        id: dropdown
        on_select: btn.text = 'Выбрана ОС: {}'.format(args[1])
        Button:
            text: 'Android'
            size_hint_y: None
            height: '48dp'
            on_release: dropdown.select('Android')
        Button:
            text: 'Linux'
            size_hint_y: None
            height: '48dp'
            on_release: dropdown.select('Linux')
        Button:
            text: 'Windows'
            size_hint_y: None
            height: '48dp'
            on_release: dropdown.select('Windows')